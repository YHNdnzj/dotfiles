#!/bin/bash

if [[ -t 1 ]]; then
    exec systemd-cat --identifier=sway "$0"
else
    unset JOURNAL_STREAM
fi

set -ex
envfiles=("$HOME/.config/sway/env"/*)
for envfile in "${envfiles[@]}"; do
    source "$envfile"
done
set +x

cd "$HOME"
export -n OLDPWD SHLVL MEMORY_PRESSURE_WATCH MEMORY_PRESSURE_WRITE CREDENTIALS_DIRECTORY
exec /usr/bin/sway
