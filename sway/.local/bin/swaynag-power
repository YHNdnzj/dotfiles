#!/bin/bash

exec swaynag -t warning \
        -m "Power Menu for Sway" \
        -B "Lock" "swaylock -f" \
        -B "Log out" "swaymsg exit" \
        -B "Reboot" "systemctl reboot" \
        -B "Power off" "systemctl poweroff" \
        -Z "Sleep" "systemctl suspend" \
        -Z "Hibernate" "systemctl hibernate"
