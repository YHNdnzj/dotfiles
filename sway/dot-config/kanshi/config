profile internal {
    output eDP-1 enable scale 1.75 adaptive_sync on
}

profile dual {
    output eDP-1 enable scale 2 adaptive_sync on position 0,0
    output DP-2 mode 2560x1440@75Hz scale 1.25 adaptive_sync on position 1440,0
}

profile external {
    output eDP-1 disable
    output DP-2 mode 2560x1440@75Hz scale 1.25 adaptive_sync on
}
