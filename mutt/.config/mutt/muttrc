set my_user = yhndnzj.2004@gmail.com
source "gpg -dq $HOME/.config/mutt/mutt-pwd.gpg |"

set realname = 'Mike Yuan'
set from = me@yhndnzj.com
set use_from = yes

set imap_user = $my_user
set imap_pass = $my_pass
set folder = imaps://imap.gmail.com/
set spoolfile = +INBOX
set imap_check_subscribed
unset imap_passive
set imap_keepalive = 300
bind index G imap-fetch-mail

set smtp_url = smtps://$my_user
set smtp_pass = $my_pass
set send_charset = "us-ascii:utf-8"

set ssl_force_tls = yes
set postponed = +[Gmail]/草稿
unset record

set mail_check = 180
set sleep_time = 0

set header_cache = ~/.cache/mutt
set message_cachedir = ~/.cache/mutt

set sidebar_visible = yes
set sidebar_width = 14
set sidebar_short_path = yes
set sidebar_non_empty_mailbox_only = yes
set sidebar_sort_method = 'new'

source ~/.config/mutt/gpg.rc
source ~/.config/mutt/colors.rc
