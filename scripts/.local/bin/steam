#!/bin/bash -e
options=("--bind=$HOME/steamapps:/home/yhndnzj/.local/share/Steam/steamapps")

steam="$(basename "$0")"
if [[ $steam == "steam" ]]; then
    steam="steam-native"
fi

mode boost
# No need for root (/etc/polkit-1/rules.d/xow.rules)
systemctl --no-block start xow.service

set -x
exec arch-nspawn-run-gui "${options[@]}" prime-run "$steam" "$@"
