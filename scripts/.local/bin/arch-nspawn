#!/bin/bash -e
nspawn="pkexec systemd-nspawn -M arch-nspawn"

boot() {
    $nspawn --boot
}

run() {
    $nspawn --as-pid2 --user=yhndnzj "$@"
}

case $1 in
    boot)
        boot
        ;;
    run)
        run "$@"
        ;;
    start-gaming)
        mode boost
        systemctl --no-block start xow
        start
        ;;
    *)
        echo "usage: $0 {boot|run (command)}"
        exit 1
        ;;
esac
exit 0
