#!/bin/bash -e
nspawn="pkexec systemd-nspawn -M arch-nspawn"

boot() {
    $nspawn --boot
}

run() {
    $nspawn --as-pid2 --user="$USER" "$@"
}

case $1 in
    boot)
        boot
        ;;
    run)
        shift
        run "$@"
        ;;
    *)
        echo "usage: $0 {boot|run [option] command}"
        exit 1
        ;;
esac
exit 0
